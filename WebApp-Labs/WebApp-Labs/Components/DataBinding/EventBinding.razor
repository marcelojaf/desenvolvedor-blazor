@rendermode InteractiveServer

<h2>Event Binding</h2>
<br/>

<button class="btn btn-primary" @onclick="ProcessarMensagem">Clique aqui</button>
<br/>

<p>@mensagem</p>

@code{
    private string mensagem = "Nenhum clique ainda.";

    private void ProcessarMensagem()
    {
        mensagem = $"Último clique: {DateTime.Now.ToString("HH:mm:ss")}";
    }
}